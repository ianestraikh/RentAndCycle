@model RentAndCycleCodeFirst.Models.Booking

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CompanyBikeId)

    <dl class="dl-horizontal">
        <dt>
            Company @Html.DisplayNameFor(model => model.CompanyBike.CompanyLocation.Company.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyBike.CompanyLocation.Company.Name)
            @Html.HiddenFor(model => model.CompanyBike.CompanyLocation.Company.Name)

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompanyBike.Bike.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyBike.Bike.Brand.Name)
            @Html.HiddenFor(model => model.CompanyBike.Bike.Brand.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompanyBike.Bike.BikeModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyBike.Bike.BikeModel)
            @Html.HiddenFor(model => model.CompanyBike.Bike.BikeModel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
            @Html.HiddenFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
            @Html.HiddenFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserId)
            @Html.HiddenFor(model => model.UserId)
        </dd>

        <dt>
            Total Price
        </dt>

        <dd>
            @ViewBag.TotalPrice
        </dd>

    </dl>

    <div class="form-group">
        @Html.LabelFor(model => model.Feedback, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Feedback, new { htmlAttributes = new { @class = "form-control", @min=1, @max=5} })
            @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
